{{!-- Need to reformat after replacing user with movies --}}
{{!-- Comments form ready, but check attributes before running --}}
<article class="user">
    <div class="title">
        {{!-- <a href="{{post.post_url}}" target="_blank">{{post.title}}</a> --}}
        <span>({{post.user_id}}), from id: {{post.id}}</span>
    </div>
    <div class="meta">
        {{post.movieDescription}}
        :Year of
        {{post.movie_title}}
        {{!-- {{post.created_at}} --}}
        {{!-- <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a> --}}
    </div>
</article>

{{#if loggedIn}}
<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit">Add comment</button>
    </div>
</form>
{{/if}}

<div class="comments">
    {{#each post.comments}}
    <section class="comment">
        <div class="meta">
            {{user.username}} commented
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>

{{#if loggedIn}}
<script src="/javascript/comments.js"></script>
{{/if}}